@model IEnumerable<LostandFoundAnimals.Models.Post>
@{
    ViewData["Title"] = "Found";
    int counter = 1;

}
<h2>A List of all Found Pets</h2>
@*<h2>@Model.Count()</h2>*@
<div class="row row-eq-height">

    @foreach (var item in Model)
    {

        <div class="col-md-4 pet">
            @if (item.Animal.Image != null)
            {
                <img src="data:image;base64,@System.Convert.ToBase64String(item.Animal.Image)" width="100" height="100" />
            }
            <h4>Name: @Html.DisplayFor(modelItem => item.Animal.AnimalName)</h4>

            <p>
                @Html.DisplayFor(modelItem => item.PostText)
            </p>
        </div>
        counter++;
        @if (counter % 4 == 0)
        {
            @: </div><div class="row row-eq-height">

        }
    }
    </div>

